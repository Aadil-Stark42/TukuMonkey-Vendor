<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7F8AA5</item>
        <item name="fontFamily">@font/segoeui</item>
    </style>

    <style name="textstyle">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="textstyleformenuitem">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>


    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/brown</item>
    </style>

    <style name="textstyle_menu">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="title_menu">
        <item name="android:textColor">#7F8AA5</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="roundImagView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="apptheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>

        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/main_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_round_shape</item>
    </style>

</resources>