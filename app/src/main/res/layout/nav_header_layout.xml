<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingBottom="30dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <in.tukumonkeyvendor.utils.SmallRoundRectCornerImageView
        android:id="@+id/nav_header_circleimageview_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/nav_header_name_id"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="wrap_content"
        android:text="Jeff Schaefer"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/nav_header_circleimageview_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/nav_header_emailaddress_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/nav_header_circleimageview_id"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_name_id"
        android:textColor="#7F8AA5"
        android:fontFamily="@font/poppins_light"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_close_circle"
            android:layout_marginRight="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>