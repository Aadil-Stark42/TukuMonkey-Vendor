<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_delete_cr"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are about to delete a Slot."
        android:textSize="16sp"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/iv_delete"
        android:gravity="center"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="This action cannot be undone, Are you sure?"
        android:fontFamily="@font/segoeui"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#7F8AA5"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_delete"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hint"
        android:text="Cancel"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="15dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:textColor="@color/gray2"
        android:textSize="16sp"
        android:background="@drawable/login_view_bg" />


    <TextView
        android:id="@+id/tv_deletes"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hint"
        android:text="Delete"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="15dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:textColor="@color/gray2"
        android:textSize="16sp"
        android:background="@drawable/login_view_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>