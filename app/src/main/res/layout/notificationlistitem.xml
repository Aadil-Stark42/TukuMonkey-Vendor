<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_img"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_notificationlist"
        app:shapeAppearanceOverlay="@style/roundImagView"/>

    <TextView
        android:id="@+id/tv_neworderarrived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New OrderArrived!"
        android:textColor="@color/gray2"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/iv_img"
        android:fontFamily="@font/segoe_ui_semibold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_referalnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05656846"
        app:layout_constraintTop_toBottomOf="@+id/tv_neworderarrived"
        android:fontFamily="@font/segoeui"
        android:textColor="@color/gray2"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/iv_img"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 week ago"
        android:fontFamily="@font/segoeui"
        android:textColor="#7F8AA5"
        app:layout_constraintTop_toBottomOf="@id/tv_referalnum"
        app:layout_constraintStart_toEndOf="@id/iv_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:background="#B7CCC9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>