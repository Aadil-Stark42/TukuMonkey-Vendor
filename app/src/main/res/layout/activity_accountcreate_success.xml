<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:id="@+id/consmain"
        android:layout_marginBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_arrow_left"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_back"
                android:fontFamily="@font/poppinsmedium"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cons_top"
            android:src="@drawable/ic_successimg"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_img"
            android:text="Your withdrawal request has been sent"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_hints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hint"
            android:text="Expect transfer in 3-7 business days"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/gray2"
            android:textSize="12sp"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/viewone"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hints"
            android:background="#B7CCC9"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_refrealnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewone"
            android:text="Ref.Number"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="#7F8AA5"/>



        <TextView
            android:id="@+id/tv_refernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_refrealnum"
            android:text="058454355"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray2"/>

        <View
            android:id="@+id/viewtwo"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_refernum"
            android:background="#B7CCC9"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:id="@+id/tv_datelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewtwo"
            android:text="Date"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="#7F8AA5"/>



        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_datelabel"
            android:text="20/03/2020"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray2"/>

        <View
            android:id="@+id/viewthree"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            android:background="#B7CCC9"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:id="@+id/tv_amountlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewthree"
            android:text="Amount"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="#7F8AA5"/>



        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_amountlabel"
            android:text="20"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray2"/>

        <View
            android:id="@+id/viewfour"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount"
            android:background="#B7CCC9"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_accountlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewfour"
            android:text="Account"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:textColor="#7F8AA5"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"/>


        <ImageView
            android:id="@+id/iv_bankimg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_accountlabel"
            android:src="@drawable/image"/>

        <TextView
            android:id="@+id/tv_bankname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Federal Bank- 8845"
            android:fontFamily="@font/segoeui"
            android:textSize="16sp"
            android:textColor="@color/gray2"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/iv_bankimg"
            app:layout_constraintTop_toBottomOf="@+id/tv_accountlabel"
            android:layout_marginLeft="15dp"/>


        <TextView
            android:id="@+id/tv_holdername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Holder Name"
            android:fontFamily="@font/segoeui"
            android:textSize="14sp"
            android:textColor="#7F8AA5"
            app:layout_constraintTop_toBottomOf="@+id/tv_bankname"
            app:layout_constraintStart_toEndOf="@+id/iv_bankimg"
            android:layout_marginLeft="15dp"/>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_holdername"
            android:background="#B7CCC9"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp" />


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="30dp"
            android:text="Continue"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:fontFamily="@font/segoe_bold"
            android:background="@drawable/login_view_bg"
            android:backgroundTint="@color/app_theme_color"
            android:gravity="center"
            android:padding="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>