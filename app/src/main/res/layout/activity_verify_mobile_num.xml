<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back_with_round"/>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="111dp"
        android:layout_height="141dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_mobileview"
        android:layout_marginTop="40dp"/>


    <TextView
        android:id="@+id/tv_verifyhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_img"
        android:text="Verify Your Mobile Number"
        android:gravity="center"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textColor="@color/gray2"
        android:layout_marginTop="40dp"
        android:textSize="18dp"/>


    <TextView
        android:id="@+id/tv_verifywithnumhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_verifyhint"
        android:text="Please Confirm your mobile number is"
        android:gravity="center"
        android:fontFamily="@font/segoeui"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>


    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_verifywithnumhint"
        android:text="9988667755"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/segoe_ui_bold"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/login_view_bg"
        android:backgroundTint="@color/app_theme_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Verify"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="15dp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>